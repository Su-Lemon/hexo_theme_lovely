    <canvas class="fireworks" style="position: fixed;left: 0;top: 0;z-index: 1; pointer-events: none;" ></canvas> 
    <script type="text/javascript" src="//cdn.bootcss.com/animejs/2.2.0/anime.min.js"></script> 
    <script type="text/javascript" src="<%- url_for() %><%= theme.sources.effects.firework.js %>"></script>
  <% } else if (theme.effects.firework1){ %>
    <script type="text/javascript" src="<%- url_for() %><%= theme.sources.effects.firework1.js %>"></script>
  <% } %>

