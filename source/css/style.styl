            }
        }
    .nexmoe-post-footer {
        background-color: #f5f6f5;
        padding: $gutter ;
        margin: -($gutter);
        margin-top: 0;
    }

}
#nexmoe-content::after{
    clear: both;
    display: table;
    content: ' ';
}
